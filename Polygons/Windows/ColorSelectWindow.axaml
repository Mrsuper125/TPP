<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Polygons.Windows.ColorSelectWindow"
        Title="ColorSelectWindow">
    <StackPanel Margin="20">
        <TextBlock Text="Введите красный цвет (от 0 до 255)" 
                   HorizontalAlignment="Center"/>
        <Slider Name="RedSlider" ValueChanged="RedSlider_OnValueChanged" Minimum="0" Maximum="255" Value="0"/>
        <TextBlock Text="Введите зелёный цвет (от 0 до 255)" 
                   HorizontalAlignment="Center"/>
        <Slider Name="GreenSlider" ValueChanged="GreenSlider_OnValueChanged" Minimum="0" Maximum="255" Value="0"/>
        <TextBlock Text="Введите синий цвет (от 0 до 255)" 
                   HorizontalAlignment="Center"/>
        <Slider Name="BlueSlider" ValueChanged="BlueSlider_OnValueChanged" Minimum="0" Maximum="255" Value="0"/>
        
    </StackPanel>
</Window>
